<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Group Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:textSize="25sp"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Owner: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/owner_caption"
            tools:textStyle="italic" />

        <TextView
            android:text="OwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/owner_caption"
            android:layout_toEndOf="@+id/owner_caption"
            android:id="@+id/owner"
            android:textColor="@color/group_details_color" />

        <TextView
            android:text="Device name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_caption"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/device_name_caption"
            android:textStyle="italic" />

        <TextView
            android:text="device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner"
            android:layout_toRightOf="@+id/device_name_caption"
            android:layout_toEndOf="@+id/device_name_caption"
            android:id="@+id/device_name"
            android:textColor="@color/group_details_color" />

        <TextView
            android:text="Number of members: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_name_caption"
            android:id="@+id/no_of_members_caption"
            android:textStyle="normal|italic" />

        <TextView
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_name"
            android:layout_toRightOf="@+id/no_of_members_caption"
            android:layout_toEndOf="@+id/no_of_members_caption"
            android:id="@+id/no_of_members"
            android:textColor="@color/group_details_color" />
    </RelativeLayout>

</LinearLayout>