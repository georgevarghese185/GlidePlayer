<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d2d2d2">


    <ImageView
        android:id="@+id/album_album_art"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:background="@color/album_art_background"
        app:srcCompat="@drawable/ic_album_white_24dp" />

    <TextView
        android:id="@+id/album_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/album_album_art"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/album_album_art"
        android:layout_toRightOf="@+id/album_album_art"
        android:maxLines="4"
        android:ellipsize="marquee"
        android:text="Unknown Album"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/album_album_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unknown Artist"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/album_album_name"
        android:layout_alignLeft="@+id/album_album_name"
        android:layout_alignStart="@+id/album_album_name" />
</RelativeLayout>