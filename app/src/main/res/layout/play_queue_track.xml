<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:clickable="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

    <android.support.constraint.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="81dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/track_unselected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageView
            android:id="@+id/queue_AlbumArt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/album_art_background"
            android:clickable="false"
            android:contentDescription="@string/albumArt_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.028"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333"
            tools:layout_conversion_absoluteHeight="60dp"
            tools:layout_conversion_absoluteWidth="60dp"
            tools:layout_conversion_absoluteX="13dp"
            tools:layout_conversion_absoluteY="10dp" />


        <TextView
            android:id="@+id/queue_trackArtist"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/track_artist"
            android:textColor="#343434"
            app:layout_constraintBottom_toTopOf="@+id/queue_trackTitle"
            app:layout_constraintLeft_toRightOf="@+id/queue_AlbumArt"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="25dp"
            tools:layout_conversion_absoluteWidth="274dp"
            tools:layout_conversion_absoluteX="78dp"
            tools:layout_conversion_absoluteY="0dp" />

        <TextView
            android:id="@+id/queue_trackTitle"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/track_title"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/queue_trackAlbum"
            app:layout_constraintLeft_toRightOf="@+id/queue_AlbumArt"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="274dp"
            tools:layout_conversion_absoluteX="78dp"
            tools:layout_conversion_absoluteY="25dp" />

        <TextView
            android:id="@+id/queue_trackAlbum"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/track_album"
            android:textColor="#343434"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/queue_AlbumArt"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="25dp"
            tools:layout_conversion_absoluteWidth="274dp"
            tools:layout_conversion_absoluteX="78dp"
            tools:layout_conversion_absoluteY="55dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>